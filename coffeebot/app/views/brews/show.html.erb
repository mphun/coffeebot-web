<div class="singlePage">
  <h2><%= @brew.brew_type %></h2>

  <table class="table">
    <tr>
      <td>ID</td>
      <td><%= @brew.id %></td>
    </tr>
    <tr>
      <td>Level</td>
      <td><%= @brew.level %></td>
    </tr>
    <tr>
      <td>Brewed At</td>
      <td><%= @brew.filled_at %></td>
    </tr>
  </table>


  <ul class="nav nav-pills">
    <li><%= link_to 'Back', {:action => 'index'} %></li>
    <li><%= link_to 'Edit', {:action => 'edit', :id => @brew.id} %></li>
    <li><%= link_to("Delete", @brew, {:method=> :delete, :confirm => "Are you sure you want to delete this item?"}) %></li>
  </ul>
  
  
</div>